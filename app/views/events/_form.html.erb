<%= render 'shared/errors', obj:@event %>

<%= form_with(model:@event, local: true, data: { turbo: false }) do |f| %>
  <p>
    <%= f.label :title%>
    <br>
    <%= f.text_field :title%>
  </p>

  <p>
    <%= f.label :description%>
    <br>
    <%= f.text_area(:description, size: '80x10') %>
  </p>

  <p>
    <%= f.submit%>
  </p>
<% end %>
