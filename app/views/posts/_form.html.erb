<%= render 'shared/errors', obj:@post %>

<%= form_with(model:@post, local: true, data: { turbo: false }) do |f| %>
  <p>
    <%= f.label :title%>
    <br>
    <%= f.text_field :title%>
  </p>

  <p>
    <%= f.label :body%>
    <br>
    <%= f.text_area(:body, size: '80x10') %>
  </p>

  <p>
    <%= f.submit%>
  </p>
<% end %>
