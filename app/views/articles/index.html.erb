<h1> Articles Listing Page!!!</h1>
<br>

<p>
  <%= button_to 'Add New Article', new_article_path, class:"btn btn-primary", method: 'get'%>
</p>
<br>

<% @articles.each do |article| %>

<div class="card m-3" style="width:400px">
	<h5 class="card-header"><%= article.title%></h5>
	<img class="card-img-top" src="img_avatar1.png" alt="Card image" style="width:100%">
	<div class="card-body">
	<p class="card-text"><%= article.body%></p>
	<%= link_to 'Show', article_path(article.id),class:"btn btn-primary"%>
	<%= link_to 'Edit', edit_article_path(article.id), class:"btn btn-primary"%>
	<%= link_to 'Delete', article_path(article.id),  class:"btn btn-danger", method: :delete, data: { confirm: "Are you sure to delete this data?" }  %> 
  </div>
</div>
<% end %>